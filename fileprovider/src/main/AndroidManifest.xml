<manifest package="org.securesystem.insular.fileprovider" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS" tools:ignore="ProtectedPermissions" /> <!-- EventReceiver -->

    <application android:label="Insular - File Shuttle" tools:ignore="AllowBackup,GoogleAppIndexingWarning,MissingApplicationIcon">

        <!-- ShuttleProvider to proxy the content requests across profile. -->
        <provider android:authorities="org.securesystem.insular.files.shuttle"
                  android:name="org.securesystem.insular.fileprovider.ShuttleProvider"
                  android:permission="android.permission.MANAGE_DOCUMENTS"
                  android:grantUriPermissions="true"
                  android:exported="true"
                  android:enabled="false"
                  android:process=":file_shuttle"> <!-- use separate process to avoid unnecessary initialization of this provider -->
            <intent-filter>
                <action android:name="android.content.action.DOCUMENTS_PROVIDER" />
            </intent-filter>
        </provider>

        <provider android:authorities="org.securesystem.insular.files"
                  android:name="org.securesystem.insular.fileprovider.ExternalStorageProviderProxy"
                  android:exported="false"
                  android:process=":file"/> <!-- Always running in different user from ShuttleProvider, therefore never use the same process. -->

    </application>
</manifest>
