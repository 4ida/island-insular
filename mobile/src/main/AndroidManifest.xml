<manifest package="org.securesystem.insular.mobile" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" >

    <uses-feature android:name="android.software.device_admin" android:required="true" />
    <uses-feature android:name="android.software.managed_users" android:required="true" />

    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />   <!-- AppLaunchShortcut -->
    <uses-permission android:name="com.android.launcher.permission.UNINSTALL_SHORTCUT" /> <!-- AppLaunchShortcut -->
    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS" tools:ignore="ProtectedPermissions" /> <!-- ServiceShuttle and more -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_SECURE_SETTINGS" tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS" tools:ignore="ProtectedPermissions" /> <!-- Not yet used -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" /> <!-- UninstallHelper.UninstallReceiver -->
    <uses-permission android:name="android.permission.REQUEST_DELETE_PACKAGES" /> <!-- Required to start ACTION_UNINSTALL_PACKAGE since Android P -->

    <application android:label="Insular - Mobile"
                 android:icon="@mipmap/ic_launcher"
                 android:roundIcon="@mipmap/ic_launcher_round"
                 android:supportsRtl="true"
                 android:theme="@style/AppTheme.NoActionBar"
                 tools:ignore="AllowBackup,GoogleAppIndexingWarning">

        <meta-data android:name="android.max_aspect" android:value="2.1" />
        <!-- <meta-data android:name="com.google.android.actions" android:resource="@xml/actions" /> -->

        <!-- windowSoftInputMode="adjustPan" to avoid bottom-sheet hanging in the center of screen when search is finished and IME panel is closed. -->
        <activity android:name="org.securesystem.insular.MainActivity" android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter android:priority="-1"> <!-- Used by IslandProvisioning to launch this activity from Insular after successful provisioning -->
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="org.securesystem.insular.category.MAIN_ACTIVITY" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <meta-data android:name="android.app.searchable" android:resource="@xml/searchable"/>
        </activity>

        <activity android:name="org.securesystem.insular.setup.SetupActivity" android:theme="@style/SetupTheme" />

        <activity android:name="org.securesystem.insular.action.FeatureActionActivity" android:theme="@android:style/Theme.Translucent.NoTitleBar"
                  android:excludeFromRecents="true">
            <intent-filter> <!-- Deep-link for App Actions -->
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="island" android:host="feature" />
            </intent-filter>
        </activity>

        <provider android:authorities="${applicationId}.apps"
                  android:name="org.securesystem.insular.data.IslandAppListProvider"
                  android:exported="false"
                  android:multiprocess="true" />

        <receiver android:name="org.securesystem.insular.adb.ProfileRestrictionsSync" android:directBootAware="true" tools:targetApi="N">
            <intent-filter>
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <receiver android:name="org.securesystem.insular.settings.IslandSettingsActivity$Enabler"> <!-- Enable IslandSettingsActivity then disable self -->
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
            </intent-filter>
        </receiver>

        <activity android:name="org.securesystem.insular.settings.SettingsActivity"
                  android:label="@string/settings_title"
                  android:theme="@style/AppTheme.Settings"
                  android:parentActivityName="org.securesystem.insular.MainActivity" />

        <activity android:name="org.securesystem.insular.settings.IslandSettingsActivity"
                  android:label="@string/label_activity_island_settings"
                  android:theme="@style/AppTheme.Settings"
                  android:enabled="false"> <!-- Enabled explicitly for managed profiles during Insular setup -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="org.securesystem.insular.category.ISLAND_ONLY" />
            </intent-filter>
        </activity>

        <activity-alias android:name="org.securesystem.insular.settings.IslandSettingsActivityInMainland"
                        android:targetActivity="org.securesystem.insular.settings.IslandSettingsActivity" /> <!-- To avoid launcher icon in mainland -->

    </application>

</manifest>